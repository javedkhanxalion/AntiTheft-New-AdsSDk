<com.bmik.android.sdk.widgets.IkmWidgetAdLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menuBgColor"
    app:layout_anchorGravity="bottom"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/_40sdp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/call_to_action"
            app:layout_constraintStart_toStartOf="@id/media" />

        <TextView
            android:id="@+id/ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@drawable/bg_text_ads_normal"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:paddingHorizontal="@dimen/_5sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:text="@string/ad"
            android:textColor="@color/white"
            android:textDirection="ltr"
            android:textSize="@dimen/_6sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/app_icon"
            app:layout_constraintTop_toTopOf="@+id/app_icon"

            />

        <TextView
            android:id="@+id/headline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintBottom_toTopOf="@id/body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ad"
            app:layout_constraintTop_toTopOf="@+id/ad" />

        <TextView
            android:id="@+id/body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="2"
            android:maxLines="2"
            android:text="@string/set_alarm_to_secure_your_phone_from_theft_or_find_your_phone"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintBottom_toTopOf="@+id/call_to_action"
            app:layout_constraintEnd_toEndOf="@id/headline"
            app:layout_constraintStart_toStartOf="@id/ad"
            app:layout_constraintTop_toBottomOf="@id/headline" />

        <com.bmik.android.sdk.widgets.IkmWidgetMediaView
            android:id="@+id/media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            app:layout_constraintBottom_toTopOf="@id/ad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/call_to_action"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginVertical="@dimen/_8sdp"
            android:background="@drawable/bg_btn_ads_round"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/body"
            app:layout_constraintWidth_percent="0.87" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.bmik.android.sdk.widgets.IkmWidgetAdLayout>